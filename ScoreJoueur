    ScoreJoueur( )
    {
        Scanner ScJo = new Scanner (System.in);
        System.out.println("entrer le longueur :"); 
        this.nom_du_joueur= ScJo.nextLine();
        System.out.println("entrer le largeur :"); 
        this.score= ScJo.nextInt();
        System.out.println("entrer le largeur :"); 
        this.score_maximal= ScJo.nextInt();

       
              
    }
           

    void Afficher( )
    {
        System.out.println("nom joueur: "+this.nom_du_joueur+"\nscore: "+this.score+"\nscore maximal"+score_maximal) ;
    }
    
    void Ajouter(int n){
        this.score+=n; 
    }
    
   
